programa
{
    // Mostra o fatorial do número informado
    funcao inicio()
    {
        inteiro numero, atual = 1
        real fatorial = 1  // Usa real para suportar números grandes

        escreva("Digite um número: ")
        leia(numero)

        se (numero < 0)
        {
            escreva("Fatorial não é definido para números negativos.\n")
        }
        senao
        {
            enquanto (atual <= numero)
            {
                fatorial = fatorial * atual
                atual = atual + 1
            }

            escreva("O fatorial de ", numero, " é: ", fatorial, "\n")
        }
    }
}
