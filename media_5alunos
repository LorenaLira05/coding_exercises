programa
{
	//Calcula a média de 5 alunos
	
	funcao inicio()
	{
	real notas[5]
     real soma = 0.0, media
     inteiro i
     
     escreva("Digite as notas dos 5 alunos:\n")
     para (i=0 ; i<5 ; i++)
    {
	escreva("Nota do aluno ", i + 1, ": ")
	leia(notas[i])
	soma = soma + notas[i]
    }
     // Cálculo da média
        media = soma / 5
        
        // Exibição do resultado
        escreva("\nMédia das notas: ", media)
	}
}
